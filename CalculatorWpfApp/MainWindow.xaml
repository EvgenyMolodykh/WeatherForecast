<Window x:Class="CalculatorWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="280" 
                           Width="270" 
                           MaxHeight="400" 
                           MaxWidth="350" 
                           MinHeight="270" 
                           MinWidth="190">
    <Window.Resources>
        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style x:Key="NumberAtion" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Window.Resources>
    <Grid x:Name="ResultButton1" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="ResultTextBlock" 
                   Margin="5" 
                   TextWrapping="Wrap" 
                   Text="" 
                   MinHeight="35"
                   MaxHeight="35"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"                   
                   Grid.Row="0"
                   Grid.ColumnSpan="4" 
                   Background="#FFB6BDB6" 
                   FontSize="24" 
                   Width="269"/>
        <Button Content="7" 

            Grid.Row="1" 
            Style="{StaticResource NumberButton}" 
            Click="SevenButton_Click"/>
        <Button x:Name="EightButton" Content="8" 
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource NumberButton}" Click="EightButton_Click" />
        <Button x:Name="NineButton" Content="9" 
            Grid.Row="1" 
            Grid.Column="2"
            Style="{StaticResource NumberButton}" Click="NineButton_Click"/>
        <Button x:Name="SummButton" Content="+" 
            Grid.Row="1" 
            Grid.Column="3"
            Style="{StaticResource NumberAtion}" Click="SummButton_Click"/>
        <Button x:Name="FourButton" Content="4" 
            Grid.Row="2"
            Style="{StaticResource NumberButton}" Click="Button_Click"/>
        <Button x:Name="FiveButton" Content="5" 
            Grid.Row="2" 
            Grid.Column="1"
            Style="{StaticResource NumberButton}" Click="FiveButton_Click"/>
        <Button x:Name="SixButton" Content="6" 
            Grid.Row="2" 
            Grid.Column="2"
            Style="{StaticResource NumberButton}" Click="SixButton_Click"/>
        <Button x:Name="SubtractionButton" Content="-" 
            Grid.Row="2" 
            Grid.Column="3"
            Style="{StaticResource NumberAtion}" Click="SubtractionButton_Click"/>
        <Button x:Name="OneButton" Content="1" 
            Grid.Row="3" 
            Style="{StaticResource NumberButton}" Click="OneButton_Click"/>
        <Button x:Name="TwoButton" Content="2" 
           Grid.Row="3" 
           Grid.Column="1"
           Style="{StaticResource NumberButton}" Click="TwoButton_Click"/>
        <Button x:Name="ThreeButton" Content="3" 
            Grid.Row="3" 
            Grid.Column="2"
            Style="{StaticResource NumberButton}" Click="ThreeButton_Click"/>
        <Button x:Name="MultiplicationButton" Content="X" 
            Grid.Row="3" 
            Grid.Column="3"
            Style="{StaticResource NumberAtion}" Click="MultiplicationButton_Click"/>
        <Button x:Name="ClearButton" Content="C" 
            Grid.Row="4" 
            Style="{StaticResource NumberButton}"
                Background="Red"
                Foreground="White" Click="ClearButton_Click"/>
        <Button x:Name="ZeroButton" Content="0" 
            Grid.Row="4" 
            Grid.Column="1"
            Style="{StaticResource NumberButton}" Click="ZeroButton_Click"/>
        <Button x:Name="ResultButton" Content="=" 
            Grid.Row="4" 
            Grid.Column="2"
            Style="{StaticResource NumberAtion}" Click="ResultButton_Click"/>
        <Button x:Name="DivideButton" Content="/" 
            Grid.Row="4" 
            Grid.Column="3"
            Style="{StaticResource NumberAtion}" Click="DivideButton_Click"/>
    </Grid>

</Window>
