<Window x:Class="Autorization.SingInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autorization"
        mc:Ignorable="d"
        Title="SingInWindow" 
        Height="300" 
        Width="400"
        Background="#FFC0D7EB">
    <Window.Resources>
        <Style x:Key="TextStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#FF534C4C"/>
        </Style>
        <Style x:Key="ButtonStyleRegistration" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                             BorderBrush="{TemplateBinding BorderBrush}" 
                             BorderThickness="{TemplateBinding BorderThickness}" 
                             CornerRadius="8">
                            <ContentPresenter 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF0E160E"/>
        </Style>

        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="Login_Label" 
            Grid.Row="0" 
            Content="Вход" 
            Style="{StaticResource TextStyle}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="Login_TextBlock"
                    Grid.Column="0"
                    Content="Логин:" 
                    Style="{StaticResource TextStyle}" 
                    HorizontalAlignment="Right"
                    Margin="80 0 0 0"/>
            <Border  Grid.Column="1"
                     Style="{StaticResource BorderStyle}"
                     Margin="10 0 0 0">
                <TextBox x:Name="RegLogin_TextBox"
                         Style="{StaticResource TextBoxStyle}"/>
            </Border>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="Password_TextBlock"
                     Grid.Column="0" 
                     Grid.Row="1"
                     Content="Пароль:" 
                     Style="{StaticResource TextStyle}"
                     Margin="80 0 0 0"/>
            <Border Grid.Column="1"
                    Style="{StaticResource BorderStyle}">
                <TextBox x:Name="RegPassword_TextBox"
                         Style="{StaticResource TextBoxStyle}"/>
            </Border>
        </Grid>
        <CheckBox x:Name="RememberMe_Chebox" Content="Запомнить меня" 
                  Grid.Row="3" 
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                 />
        <Button x:Name="SingIn_Button"
             Grid.Row="4"
             Content="Войти"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Width="80"
             Height="30"
             Style="{StaticResource ButtonStyleRegistration}" 
             Background="#FF64CCF1"/>
    </Grid>
</Window>